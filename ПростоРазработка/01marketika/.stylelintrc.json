{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-recess-order"
    ],
    "rules": {
        "indentation": 4,
        "max-nesting-depth": 6,
        "number-leading-zero": null,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "include",
                    "mixin"
                ]
            }
        ]
    }
}